   <children>
      <Label layoutX="59.0" layoutY="51.0" text="Station Name:" />
      <Label layoutX="59.0" layoutY="84.0" text="Stop ID:" />
      <Label layoutX="59.0" layoutY="132.0" text="Entry Fare ($):" />
      <Label layoutX="61.0" layoutY="166.0" text="Station Type:" />
