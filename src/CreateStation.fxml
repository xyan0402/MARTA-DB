         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <TextField fx:id="stationName" layoutX="170.0" layoutY="47.0" />
      <TextField fx:id="StopID" layoutX="170.0" layoutY="89.0" />
      <TextField fx:id="EntryFare" layoutX="170.0" layoutY="127.0" />
